{
  "version": 2,
  "builds": [
    {
      "src": "src/html/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "src/styles/*.css",
      "use": "@vercel/static"
    },
    {
      "src": "src/js/*.js",
      "use": "@vercel/static"
    },
    {
      "src": "src/img/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/src/html/login.html"
    },
    {
      "src": "/(.*\\.html)",
      "dest": "/src/html/$1"
    },
    {
      "src": "/(.*\\.css)",
      "dest": "/src/styles/$1"
    },
    {
      "src": "/(.*\\.js)",
      "dest": "/src/js/$1"
    },
    {
      "src": "/(.*\\.(png|jpg|jpeg|gif|svg))",
      "dest": "/src/img/$1"
    }
  ]
}