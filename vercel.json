{
  "version": 2,
  "builds": [
    { "src": "src/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/js/(.*)", "dest": "src/js/$1" },
    { "src": "/styles/(.*)", "dest": "src/styles/$1" },
    { "src": "/img/(.*)", "dest": "src/img/$1" },
    { "src": "/(.*\\.html)$", "dest": "src/html/$1" },
    { "src": "/", "dest": "src/html/login.html" }
  ]
}
